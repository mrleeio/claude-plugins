{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "mrleeio-claude-plugins",
  "description": "Personal Claude Code plugins marketplace by mrleeio",
  "owner": {
    "name": "mrleeio",
    "email": "michael@mrlee.io"
  },
  "plugins": [
    {
      "name": "conventional-commits",
      "description": "Create git commits following Conventional Commits v1.0.0 without AI attribution",
      "version": "1.0.0",
      "author": {
        "name": "mrleeio",
        "url": "https://github.com/mrleeio"
      },
      "source": "./plugins/conventional-commits",
      "category": "productivity",
      "homepage": "https://github.com/mrleeio/claude-plugins/tree/main/plugins/conventional-commits"
    },
    {
      "name": "ruby-lsp",
      "description": "Ruby language server for code intelligence",
      "version": "1.0.0",
      "author": {
        "name": "mrleeio",
        "url": "https://github.com/mrleeio"
      },
      "source": "./plugins/ruby-lsp",
      "category": "development",
      "homepage": "https://github.com/mrleeio/claude-plugins/tree/main/plugins/ruby-lsp",
      "lspServers": {
        "ruby": {
          "command": "ruby-lsp",
          "extensionToLanguage": {
            ".rb": "ruby",
            ".rbi": "ruby",
            ".rake": "ruby",
            ".gemspec": "ruby",
            ".ru": "ruby",
            ".erb": "erb",
            ".builder": "ruby",
            ".jbuilder": "ruby",
            ".rabl": "ruby",
            ".thor": "ruby",
            ".podspec": "ruby",
            ".irbrc": "ruby",
            ".pryrc": "ruby"
          }
        }
      }
    },
    {
      "name": "ruby-binstubs",
      "description": "Ensures Claude uses binstubs (bin/*) instead of bundle exec in Ruby projects",
      "version": "1.0.0",
      "author": {
        "name": "mrleeio",
        "url": "https://github.com/mrleeio"
      },
      "source": "./plugins/ruby-binstubs",
      "category": "development",
      "homepage": "https://github.com/mrleeio/claude-plugins/tree/main/plugins/ruby-binstubs"
    }
  ]
}
